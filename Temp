    function checkPassword() {
      const d1 = document.getElementById("digit1").value.trim();
      const d2 = document.getElementById("digit2").value.trim();
      const d3 = document.getElementById("digit3").value.trim();
      const messageEl = document.getElementById("message");
      if (!d1 || !d2 || !d3) {
        messageEl.style.color = "orange";
        messageEl.innerText = "âš ï¸ Please enter the complete password before unlocking.";
        return; // æå‰ç»“æŸå‡½æ•°
      }
      const fullCode = `${d1}|${d2}|${d3}`;
      const hashedInput = CryptoJS.MD5(fullCode).toString();

      if (hashedInput === correctHash) {
        const quote = statsQuotes[Math.floor(Math.random() * statsQuotes.length)];
        messageEl.style.color = "green";
        messageEl.innerText = `âœ¨ Code accepted! Here's your treasure:\n${quote}`;
      } else {
        messageEl.style.color = "red";
        messageEl.innerText = "âŒ Incorrect code. The data doesn't lie - try again!";
      }
    }
    // æ·»åŠ å›è½¦é”®æ”¯æŒ
    document.querySelectorAll('input').forEach((input, index) => {
      input.addEventListener('keypress', function(event) {
        if (event.key === 'Enter') {
          checkPassword();
        }
      });
      
      // æ·»åŠ Tabé”®è·³è½¬åˆ°ä¸‹ä¸€ä¸ªè¾“å…¥æ¡†
      input.addEventListener('keydown', function(event) {
        if (event.key === 'Tab' && index < 3) {
          // Tabé”®çš„é»˜è®¤è¡Œä¸ºå·²ç»ä¼šè·³è½¬ï¼Œè¿™é‡Œåªæ˜¯ä¸ºäº†ä¿æŒä¸€è‡´æ€§
          return;
        }
        // å¯ä»¥ç”¨Ctrl+Enteræˆ–è€…åªæ˜¯Tabæ¥è·³è½¬ï¼Œç§»é™¤è‡ªåŠ¨è·³è½¬
      });
    });

     // ç¦æ­¢å³é”®
  document.addEventListener('contextmenu', function (e) {
    e.preventDefault();
  });

  // ç¦æ­¢ F12, Ctrl+Shift+I, Ctrl+U, Ctrl+S
  document.addEventListener('keydown', function (e) {
    if (
      e.key === 'F12' ||
      (e.ctrlKey && e.shiftKey && ['I', 'J', 'C'].includes(e.key)) ||
      (e.ctrlKey && ['U', 'S'].includes(e.key))
    ) {
      e.preventDefault();
    }
  });
    
